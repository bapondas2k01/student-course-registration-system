<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@Bankai.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="courseenrollment.StudentDashboardController">
   <left>
      <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10" style="-fx-background-color: #1e2a38;">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="180.0" style="-fx-text-fill: white; -fx-padding: 10 0 10 0;" styleClass="main-title" text="Dashboard" />
            <Button fx:id="ReportBtn" mnemonicParsing="false" onAction="#myProfile" prefWidth="180.0" styleClass="side-button" text="My Profile" />
            <Button fx:id="ManageStdBtn" mnemonicParsing="false" onAction="#viewCourses" prefWidth="180.0" styleClass="side-button" text="View Courses" />
            <Button fx:id="ManageCourseBtn" mnemonicParsing="false" onAction="#enrollCourse" prefWidth="180.0" styleClass="side-button" text="Enroll in Course" />
            <Button fx:id="ApproveRegBtn" mnemonicParsing="false" onAction="#myEnrollments" prefWidth="180.0" styleClass="side-button" text="My Enrollments" />
            <Button fx:id="LogoutBtn" mnemonicParsing="false" onAction="#Logout" prefWidth="180.0" styleClass="side-button" text="Logout" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="MyProfileVbox" alignment="CENTER" managed="false" prefWidth="600.0" spacing="10.0" visible="false">
               <children>
                  <Label styleClass="main-title" text="My Profile" />
                  <Label fx:id="studentLabel313" layoutX="200.0" layoutY="260.0" style="-fx-text-fill: green;" />
                  <Label fx:id="studentLabel31" styleClass="view-label" text="ID" />
                  <TextField fx:id="tfID" styleClass="form-input" />
                  <Label fx:id="studentLabel311" styleClass="view-label" text="Name" />
                  <TextField fx:id="tfName" styleClass="form-input" />
                  <Label fx:id="studentLabel3121" styleClass="view-label" text="Department" />
                  <TextField fx:id="tfDept" styleClass="form-input" />
                  <Label fx:id="studentLabel312" styleClass="view-label" text="Contact" />
                  <TextField fx:id="tfContact" styleClass="form-input" />
                  <Label fx:id="studentLabel3122" styleClass="view-label" text="Email" />
                  <TextField fx:id="tfEmail" styleClass="form-input" />
                  <Label fx:id="studentLabel3123" styleClass="view-label" text="Password" />
                  <TextField fx:id="tfPass" styleClass="form-input" />
                  <Button fx:id="updateBtn" mnemonicParsing="false" onAction="#Update" styleClass="signup-button" text="Update Info" />
               </children>
               <padding>
                  <Insets top="3.0" />
               </padding>
               <VBox.margin>
                  <Insets left="30.0" right="350.0" />
               </VBox.margin>
            </VBox>
            <VBox fx:id="ViewCourseVbox" alignment="CENTER" managed="false" prefHeight="601.0" prefWidth="700.0" spacing="4.0" visible="false">
               <children>
                  <Label fx:id="courseLabel" styleClass="main-title" text="View Courses" />
                  <TableView fx:id="CourseTable" prefHeight="559.0" prefWidth="700.0">
                     <columns>
                        <TableColumn fx:id="colCID" prefWidth="78.0" text="Course ID" />
                        <TableColumn fx:id="colCname" prefWidth="161.99996948242188" text="Course Name" />
                        <TableColumn fx:id="colCinstructor" prefWidth="173.3333740234375" text="Instructor" />
                        <TableColumn fx:id="colCdept" prefWidth="100.6666259765625" text="Dept" />
                        <TableColumn fx:id="colCcredit" prefWidth="85.3333740234375" text="Credit" />
                     </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets top="3.0" />
               </padding>
            </VBox>
            <VBox fx:id="EnrollVbox" alignment="TOP_CENTER" managed="false" prefHeight="631.0" prefWidth="700.0" spacing="10.0" visible="false">
               <children>
                  <Label styleClass="main-title" text="Enroll in Course" />
                  <TextField fx:id="tfenID" prefHeight="23.0" prefWidth="200.0" promptText="Enroll ID" styleClass="form-input" />
                  <TextField fx:id="tfstdID" prefHeight="23.0" prefWidth="200.0" promptText="Student ID" styleClass="form-input" />
                  <TextField fx:id="tfcrsID" prefHeight="23.0" prefWidth="200.0" promptText="Course ID" styleClass="form-input" />
                  <DatePicker fx:id="dpenDate" prefHeight="44.0" prefWidth="335.0" promptText="Select Date" styleClass="form-input" />
                  <ComboBox fx:id="comboStatus" prefHeight="44.0" prefWidth="367.0" promptText="Select Status" styleClass="form-input" />
                  <Button fx:id="enrollBtn" mnemonicParsing="false" onAction="#Enroll" styleClass="signup-button" text="Enroll" />
               </children>
               <padding>
                  <Insets left="30.0" right="350.0" />
               </padding>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </VBox>
            <VBox fx:id="MyEnrollmentsVbox" alignment="CENTER" managed="false" prefHeight="600.0" prefWidth="600.0" spacing="4.0" visible="false">
               <children>
                  <Label fx:id="ViewLabel" styleClass="main-title" text="My Enrollments" />
                  <TableView fx:id="EnrollmentTable" prefHeight="606.0" prefWidth="600.0">
                     <columns>
                        <TableColumn fx:id="colenID" prefWidth="107.33334350585938" text="en_ID" />
                        <TableColumn fx:id="colstdID" prefWidth="133.33331298828125" text="std_ID" />
                        <TableColumn fx:id="colcrsID" prefWidth="110.66668701171875" text="crs_ID" />
                        <TableColumn fx:id="colenDate" prefWidth="132.00003051757812" text="en_Date" />
                        <TableColumn fx:id="colStatus" prefWidth="115.3333740234375" text="Status" />
                     </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets top="3.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
