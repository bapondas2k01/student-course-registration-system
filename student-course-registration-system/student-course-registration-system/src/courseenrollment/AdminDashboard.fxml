<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="900" stylesheets="@Bankai.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="courseenrollment.AdminDashboardController">

    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10" style="-fx-background-color: #1e2a38;">
            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="180.0" style="-fx-text-fill: white; -fx-padding: 10 0 10 0;" styleClass="main-title" text="Dashboard" />
         <Button fx:id="ManageStdBtn" mnemonicParsing="false" prefWidth="180.0" styleClass="side-button" text="Manage Students" />
         <Button fx:id="ManageCourseBtn" mnemonicParsing="false" prefWidth="180.0" styleClass="side-button" text="Manage Courses" />
         <Button fx:id="ApproveRegBtn" mnemonicParsing="false" prefWidth="180.0" styleClass="side-button" text="Approve Registrations" />
         <Button fx:id="ReportBtn" mnemonicParsing="false" prefWidth="180.0" styleClass="side-button" text="Generate Reports" />
         <Button fx:id="AddAdminBtn" mnemonicParsing="false" prefWidth="180.0" styleClass="side-button" text="Add Admin" />
         <Button fx:id="LogoutBtn" mnemonicParsing="false" prefWidth="180.0" styleClass="side-button" text="Logout" />
        </VBox>
    </left>

    <!-- Dynamic Content Area -->
    <center>
        <AnchorPane fx:id="mainContentPane" styleClass="glass-background" />
    </center>
</BorderPane>
