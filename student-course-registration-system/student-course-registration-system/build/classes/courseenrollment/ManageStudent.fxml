<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="700.0" spacing="15" stylesheets="@Bankai.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="courseenrollment.ManageStudentController">

    <Label alignment="CENTER" contentDisplay="CENTER" styleClass="main-title" text="Manage Students" />

    <TableView fx:id="studentTable" prefHeight="350" prefWidth="700">
        <columns>
            <TableColumn prefWidth="123.33334350585938" text="ID" />
            <TableColumn prefWidth="152.66663360595703" text="Name" />
            <TableColumn prefWidth="134.66668701171875" text="Department" />
            <TableColumn prefWidth="126.66665649414062" text="Contact" />
            <TableColumn prefWidth="160.66668701171875" text="Email" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="100.0">
        <Button fx:id="btnAdd" styleClass="signup-button" text="Add Student" />
        <Button fx:id="btnEdit" styleClass="signup-button" text="Edit Student" />
        <Button fx:id="btnDelete" styleClass="signup-button" text="Delete Student" />
    </HBox>
</VBox>
